@model Comment

<section>
    <div class="p-5 mt-5 bg-light border border-1">
        <form method="post">
            <div class="text-center border-bottom">
                <h1>Dodaj komentarz</h1>
            </div>
            <div class="mt-3">
                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description"></label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-dark btn-size btn-font">Dodaj</button>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@TempData["id"]" class="btn btn-secondary ms-1 btn-font">Wróć do strony głównej</a>
                </div>
            </div>
        </form>
    </div>
</section>