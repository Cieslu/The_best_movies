@model Movie

<section>
    <div class="row bg-light p-5 mt-5 border border-1">
        <div class="text-center">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-12 mt-3 mt-sm-5 d-flex justify-content-lg-center col-xl-6">
            @Html.Raw(Model.Video)
        </div>
        <div class="col-6 mt-4 mt-sm-5 d-flex justify-content-start justify-content-lg-center col-xl-3">
            <ul class="list-unstyled">
                <li><h5 class="fw-bold text-decoration-underline">Reżyseria</h5><span class="d-block mt-1">@Model.Director</span></li>
                <li class="mt-3 mt-sm-4"><h5 class="fw-bold text-decoration-underline">Rok produkcji</h5><span class="d-block mt-1">@Model.RelaseDate</span></li>
                <li class="mt-3 mt-sm-4"><h5 class="fw-bold text-decoration-underline">Gatunek</h5><span class="d-block mt-1">@ViewBag.genreMovie</span></li>
            </ul>
        </div>
        <div class="col-6 mt-4 mt-sm-5 d-flex justify-content-lg-start col-xl-3">
            <img class="img-sm img-md ms-lg-3" src="@Model.Photo" width="250" height="315">
        </div>
        <div class="mt-3 mt-sm-5">
            <h4>Krótki opis filmu:</h4>
            <p>@Model.Opinion</p>
        </div>
        <div class="mt-5">
            <div class="d-flex justify-content-center">
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Wróć do bazy filmów</a>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="row bg-light p-5 mt-5 border border-1 d-flex justify-content-center">
        <div class="row border-bottom pb-3">
            <div class="col-12 d-sm-none mb-5 d-flex justify-content-center">
                <a class="btn btn-dark" asp-controller="AddComment" asp-action="CreateComment" asp-route-id="@Model.Id">Dodaj komentarz</a>
            </div>
            <div class="col-12 d-flex justify-content-center d-sm-block col-sm-6">
                <h3>Komentarze @ViewBag.comCount:</h3>
            </div>
            <div class="col-12 d-none d-sm-flex col-sm-6 justify-content-end">
                <a class="btn btn-dark" asp-controller="AddComment" asp-action="CreateComment" asp-route-id="@Model.Id">Dodaj komentarz</a>
            </div>
        </div>

        @if (Model.Comments.Count() == 0)
        {
            <div class="bg-light mt-5 d-flex justify-content-center">
                <h5>Nie dodano jeszcze żadnych komentarzy!</h5>
            </div>
        }

        <div class="mt-3">
            <ul class="list-unstyled">
                @foreach (var element in Model.CommentsMovie)
                {
                    <li class="p-3 border-bottom">
                        <span class="fw-bold">@element.Name:</span>
                        <span class="ms-1">@element.Description</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>



